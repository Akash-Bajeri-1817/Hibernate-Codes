<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<!-- To provide mapping between entity class and student -->
	<class name="com.tca.entities.Student" table="student">

		<!-- Mapping between fields and column name -->
		<id name="rollNumber" column="roll_number" />
		<property name="name" column="name" />
		<property name="percentage" column="percentage" />
	</class>
</hibernate-mapping>