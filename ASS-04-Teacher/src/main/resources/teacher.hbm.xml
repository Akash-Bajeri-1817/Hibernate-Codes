<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<!-- To provide mapping between entity class and student -->
	<class name="com.tca.ASS_04_Teacher.entities.Teacher"
		table="teacher">

		<!-- Mapping between fields and column name -->
		<id name="teacherId" column="TEACHER_ID" />
		<property name="teacherName" column="TEACHER_NAME" />
		<property name="salary" column="SALARY" />
		<property name="city" column="CITY" />
	</class>
</hibernate-mapping>